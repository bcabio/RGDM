{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "app/**/*",
        "main.ts"
    ],
    "exclude": [
        "node_modules",
        "scribbletune",
        "static"
    ]

}
